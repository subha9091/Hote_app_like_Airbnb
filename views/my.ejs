                <span>Company details</span>
                <span>&#183 </span>
                <span>Destinations</span>
            </div>
            <div style="display: flex; justify-content: space-around; gap: 1.5rem;">
                <div>
                    <a href="/siteinstructions" style="text-decoration: none; color: #e42246">Site instructions</a>
                </div>
                <div>
                    <span><i class="fa-solid fa-globe"></i></span>
                </div>
                <div>
                    <span>English (IN)</span>
                </div>
                <div>
                    <span>&#8377 </span>
                    <span>INR</span>
                </div>
                <div>
                    <button id="supprtShowBtn" class="loginSignupBtn popHelpBtn"><span><i class="fa-solid fa-angle-up"></i></span></button>
                </div>
            </div>
            
        </div>
    </footer>
    <script>
            var loginSignupBtn = document.getElementsByClassName('loginSignupBtn');
            var popupDiv = document.getElementById('popupDiv');
            loginSignupBtn[0].onmouseenter = function () {
                popupDiv.style.display = "block";
            }
            popupDiv.onmouseleave = function () {
                popupDiv.style.display = "none";
            }
            document.getElementById('becomeHostBtn').onclick = function () {
                document.getElementById('registerPropertyForm').style.display = "block";
            }
            var showSupprtDiv = document.getElementById("supprtShowBtn");
            var supportDiv = document.getElementById("helpnSupportDiv");
            var hideSupportDiv = document.getElementById("supporHidetBtn");
            var mapcontainer = document.getElementById('mapContainer');
            showSupprtDiv.onclick = function () {
                supportDiv.style.display = "block";
                mapcontainer.style.display ="none";
            }
    
            hideSupportDiv.onclick = function () {
                supportDiv.style.display = "none";
                mapcontainer.style.display ="block";
            }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous">
    </script>
    </body>
    
    </html>